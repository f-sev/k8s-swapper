<idea-plugin>
    <id>com.github.fsev.k8sswapper</id>
    <name>k8s-swapper</name>
    <vendor>f-sev</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.fsev.k8sswapper.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.fsev.k8sswapper.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.fsev.k8sswapper.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
